<?xml version="1.0" encoding="UTF-8"?>
<addons>


<addon id="plugin.video.fireball" name="Fireball" version="2018.05.241" provider-name="bumbum">
  <requires>
    <import addon="xbmc.python" version="2.1.0"/>
    <import addon="script.module.simplejson" version="3.3.0"/>
    <import addon="script.module.urlresolver"  version="3.0.32"/>
    <import addon="script.module.liveresolver" version="0.1.24"/>
    <import addon="script.common.plugin.cache" version="2.5.2"/>

    <import addon="script.module.metahandler" version="2.5.1"/>
    <import addon="plugin.video.youtube" optional="true" />
  </requires>
  <extension point="xbmc.python.pluginsource" library="default.py">
        <provides>video</provides>
  </extension>
  <extension point="xbmc.addon.metadata">
    <summary lang="en">Fireball</summary>
    <description lang="en">Whatever the fuck I want</description>
    <platform>all</platform>
  </extension>
</addon>

<addon id="plugin.video.IMVDb"
       name="IMVDb"
       version="0.0.1"
       provider-name="bumbum">
    <requires>
        <import addon="xbmc.python" version="2.1.0"/>
        <import addon="script.module.requests" version="1.1.0"/>
        <import addon="script.module.t0mm0.common" version="1.1.0"/>
        <import addon="plugin.video.youtube"/>
    </requires>
    <extension point="xbmc.python.pluginsource"
               	library="default.py">
        <provides>video audio</provides>
    </extension>
    <extension point="xbmc.addon.metadata">
        <platform>all</platform>
        <summary>Internet Music Video Database</summary>
        <description>IMVDb is a database of music video information. Find your new favorite video, add to the database, or just watch.</description>
        <website>https://imvdb.com/</website>
    </extension>
</addon>

