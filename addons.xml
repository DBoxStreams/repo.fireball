		<checksum>https://github.com/DBoxStreams/repo.fireball/raw/master/addons.xml.md5</checksum>
		<datadir zip="true">https://github.com/DBoxStreams/repo.fireball/raw/master/zips</datadir>
	</extension>
	<extension point="xbmc.addon.metadata">
		<summary>Whatever the fuck I want</summary>
		<description>Yet again, whatever the fuck I want</description>
		<platform>all</platform>
	</extension>
</addon>
</addons>
